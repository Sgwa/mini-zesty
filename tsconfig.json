{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@env": ["./env"],
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "store/*": ["store/*"],
      "styles/*": ["styles/*"],
      "templates/*": ["templates/*"],
      "utils/*": ["utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "android",
    "ios",
    ".expo"
  ],
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
